# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3310
DB_USER=order_service_user
DB_PASSWORD=order_service_password
DB_NAME=order_service_db

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (Auth Service ile aynı secret kullanılmalı)
JWT_SECRET=your-jwt-secret-key-change-in-production

# Internal Service Key (servisler arası güvenlik)
INTERNAL_SERVICE_KEY=internal-service-secret-key-2024

# =============================================================================
# FRONTEND İÇİN (Tarayıcı yönlendirmeleri - Ingress üzerinden)
# =============================================================================
BASE_DOMAIN=https://suleymanakturk.online

# Frontend path'leri
AUTH_PATH=/login
CART_PATH=/cart
PRODUCT_PATH=/products
SEARCH_PATH=/

# =============================================================================
# BACKEND İÇİN (Kubernetes Internal - Servis-arası iletişim)
# =============================================================================
K8S_AUTH_SERVICE=http://auth-service
K8S_CART_SERVICE=http://cart-service
K8S_PRODUCT_SERVICE=http://product-service
K8S_PAYMENT_SERVICE=http://payment-service
K8S_INVENTORY_SERVICE=http://inventory-service
K8S_SEARCH_SERVICE=http://search-service
