# Database Configuration (MongoDB - Read-Only)
MONGODB_URI=mongodb://mongoadmin:secret@localhost:27017/product_service_db?authSource=admin

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (Auth Service ile aynı secret kullanılmalı)
JWT_SECRET=your-jwt-secret-key-change-in-production

# =============================================================================
# FRONTEND İÇİN (Tarayıcı yönlendirmeleri - Ingress üzerinden)
# =============================================================================
BASE_DOMAIN=https://suleymanakturk.online

# Frontend path'leri (tarayıcı URL'lerinde görünür)
AUTH_PATH=/login
CATEGORY_PATH=/categories
SELLER_PATH=/seller
PRODUCT_PATH=/products
CART_PATH=/cart
ORDER_PATH=/orders

# =============================================================================
# BACKEND İÇİN (Kubernetes Internal - Servis-arası iletişim)
# =============================================================================
# K8S Service'ler port 80'den expose edilir, port belirtmeye gerek yok
K8S_AUTH_SERVICE=http://auth-service
K8S_CATEGORY_SERVICE=http://category-service
K8S_SELLER_SERVICE=http://seller-service
K8S_PRODUCT_SERVICE=http://product-service
K8S_CART_SERVICE=http://cart-service
K8S_ORDER_SERVICE=http://order-service
